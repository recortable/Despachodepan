<%= form_for([:admin, @tag]) do |form| %>
    <p>
      <label for="tag_name">Nombre</label>
      <%= form.text_field :name %>
    </p>
    <label>Color</label>
    <table>
      <% @colors.each do |color| %>
          <tr>
            <td><%= form.radio_button :color_id, color.id %></td>
            <td><%= color_example color.value %></td>
            <td><%= color_example color.high_value %></td>
            <td><%= color.name %></td>
          </tr>
      <% end %>
    </table>
    <p>
      <%= form.submit %>
    </p>
<% end -%>