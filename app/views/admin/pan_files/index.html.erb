<%= title "Ficheros de #{card.title}" %>

<%= render card if card %>

<%# paginate card_files %>

<table>
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Ficha</th>
    <th>Fichero</th>
  </tr>
  </thead>
  <tbody>
  <% pan_files.each do |file| %>
      <tr>
        <td><%= file.title %></td>
        <td><%= link_to file.card.title, [:admin, file.card] %></td>
        <td><%= file.stored_identifier if file.file? %></td>
      </tr>
  <% end %>
  </tbody>
</table>
