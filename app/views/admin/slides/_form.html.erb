
<div class="nested">
  <h3><%= form_label %></h3>
  <%= form_for [:admin, slide], :html => {:multipart => true}  do |form| %>
    <%= form.hidden_field :rol %>
    <%= form.hidden_field :card_id %>
    <p>
      <% if slide.image %>
        <%= image_tag slide.image.public_filename %>
        <span class="info">Para cambiar esta foto, simplemente sube otra. <br/>Si quieres conservar esta, deja el campo "Foto" vac√≠o.</span>
      <% end %>
      <%= form.label :photo_data, 'Foto' %>
      <%= file_field_tag :photo_data  %>
    </p>
    <p>
      <%= form.label :body, t(:body) %>
        <%= textile_info %>
      <%= form.text_area :body, :rows => 10  %>
    </p>
    <p>
      <%= form.label :date, t("slide.extra.fecha_#{slide.rol}") %>
      <%= form.text_field :date %>
    </p>
    <% if slide.extra_meaning %>
      <p>
        <%= form.label :extra, t(slide.extra_meaning) %>
        <%= form.select :extra, slide.extra_values %>
      </p>
    <% end %>

    <p><%= submit_tag form_submit %></p>
  <% end %>
</div>