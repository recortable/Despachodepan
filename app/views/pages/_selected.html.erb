<div class="selected"
     style="background-color: <%= "##{selected.card.color.high_value}" %>;
     color: <%= "##{selected.card.color.value}" %>;
     width: <%= selected.width %>px;">
  <div class="image">
    <%= (link_to_if selected.card.visible?, image_tag(selected.image_url), selected.card.path) if selected.image %>
  </div>
  <div class="data">
    <div class="date"><%= year_of selected.date %></div>
    <div class="body"><%= render_body selected %></div>
  </div>
</div>
